<%= simple_form_for @book, defaults: { input_html: { class: "form_input" } }, html: { class: "contents" } do |form| %>
<div class="my-5">
    <%= form.input :title %>
  </div>

  <div class="my-5">
    <%= form.input :author %>
  </div>

  <div class="my-5">
    <%= form.input :isbn %>
  </div>

  <div class="my-5">
    <%= form.input :description %>
  </div>

  <div class="inline">
    <%= form.button :submit, "Save", class: "btn-blue" %>
  </div>
<% end %>
